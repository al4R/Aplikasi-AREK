<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg_cari_gagal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/dvr"
        android:layout_centerInParent="true"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_baseline_search_off_24"/>
    <TextView
        android:layout_centerInParent="true"
        android:layout_below="@+id/dvr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data yang anda cari tidak ditemukan"
        android:textColor="@color/ColorRed"/>
    <TextView
        android:layout_marginTop="25dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/dvr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ketik lagi untuk mencari data yang lain"
        />
</RelativeLayout>